{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django + WebSocket",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "justMyCode": false
        }
    ]
}
